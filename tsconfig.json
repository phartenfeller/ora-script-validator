{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "noImplicitAny": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["./src/**/*.ts", "index.ts", "local.ts", "cli.ts"],
  "exclude": [
    "./test/**/*.js",
    "testscripts/*.ts",
    "webpack.config.js",
    "dist",
    "bin"
  ]
}
